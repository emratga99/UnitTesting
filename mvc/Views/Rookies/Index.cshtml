@model IEnumerable<mvc1.Models.PersonModel>;
@{
    ViewData["Title"] = "Rookies";
}

<p>
    <button type="button" class="btn btn-light">@Html.ActionLink("Create New Person", "Create")</button>
</p>
<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>FullName </th>
        <th>Age </th>
        <th>Gender </th>
        <th>Actions </th>
    </tr>
    @for (int i = 0; i < Model.Count(); i++)
    {
        var person = Model.ElementAt(i);
        <tr>
            <td><a href="Details/@i">@person.FullName</a></td>
            <td>@person.Age</td>
            <td>@person.Gender</td>
            <td>
                <button type="button" class="btn btn-secondary">@Html.ActionLink("Update", "Update", new { id = i
                })</button>
                <button type="button" class="btn btn-warning">@Html.ActionLink("Delete", "Delete", new { id = i
                })</button>
            </td>
        </tr>
    }
</table>