@model mvc1.Models.PersonUpdateModel;
@{
    ViewData["Title"] = "Update person";
    var radioValue = @Model.IsGraduated == true ? "checked" : "";
    var DOB =@Model.DateOfBirth !=null? @Model.DateOfBirth.Value.ToString("yyyy-MM-dd"):"";
}
<div class="container">
    <div class="row">
        
        @using (Html.BeginForm()){
            <div class="form-group">
                <label>First Name</label>
                <div class="col-lg-10">
                    <input class="form-control text-box single-line" id="FirstName" name="FirstName" type="text"
                        value="@Model.FirstName">
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>
                <label>Last Name</label>
                <div class="col-lg-10">
                    <input class="form-control text-box single-line" id="LastName" name="LastName" type="text"
                        value="@Model.LastName">
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
                <label>Gender</label>
                <div class="col-lg-10">
                    <input class="form-control text-box single-line" id="Gender" name="Gender" type="text"
                        value="@Model.Gender">
                    @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger"})
                </div>
                <label>Date Of Birth</label>
                <div class="col-lg-10">
                    <input class="form-control text-box single-line" id="DateOfBirth" name="DateOfBirth"
                        value="@DOB" type="date">
                </div>
                <label>Phone Number</label>
                <div class="col-lg-10">
                    <input class="form-control text-box single-line" id="PhoneNumber" name="PhoneNumber" type="text"
                        value="@Model.PhoneNumber">
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                </div>
                <label>Is Graduated</label>
                <div class="col-lg-10">
                    <input class="form-control form-check-input" type="checkbox" id="IsGraduated" name="IsGraduated"
                        value= "true" @radioValue>
                </div>
            </div>
            <br />

            <p>
                <button type="submit" class="btn btn-success">Submit</button>
            </p>
        }
    </div>
</div>